@model WebApplication4.ViewModels.TripDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Trip Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Destination
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Trip.Name)
        </dd>

        <dt>
            Start Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Trip.StartDate)
        </dd>

        <dt>
            End Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Trip.EndDate)
        </dd>
    </dl>
</div>

<div>
    <table class="table">
        <tr>
            <th>
                Waypoints
            </th>
            <th>
                Start Date
            </th>
            <th>
                Options
            </th>
        </tr>

        @foreach (var item in Model.Waypoints)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDateTime)
                </td>
                <td>
                    @Html.ActionLink("Edit", "../Waypoints/Create", new { id = item.Id }) |
                    @Html.ActionLink("Details", "../Waypoints/Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "../Waypoints/Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table> 
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Trip.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
