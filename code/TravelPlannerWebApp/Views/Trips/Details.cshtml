@model WebApplication4.ViewModels.TripDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Trip Details</h2>

<p>
    @Html.ActionLink("Create New Waypoint", "../Waypoints/Create") |
    @Html.ActionLink("Create New Lodging", "../Lodgings/Create") |
    @Html.ActionLink("Create New Transportation", "../Transportation/Create")
</p>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Destination
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Trip.Name)
        </dd>

        <dt>
            Start Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Trip.StartDate)
        </dd>

        <dt>
            End Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Trip.EndDate)
        </dd>
    </dl>
</div>

<div>
    <table class="table">
        <tr>
            <th>
                Waypoints
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Options
            </th>
        </tr>

        @foreach (var item in Model.Waypoints)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDateTime)
        </td>
        <td>
            @Html.ActionLink("Details", "../Waypoints/Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "../Waypoints/Delete", new { id = item.Id })
        </td>
    </tr>
        }
    </table> 
</div>

<div>
    <table class="table">
        <tr>
            <th>
                Lodgings
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Options
            </th>
        </tr>

        @foreach (var item in Model.Lodgings)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndTime)
        </td>
        <td>
            @Html.ActionLink("Details", "../Lodgings/Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "../Lodgings/Delete", new { id = item.Id })
        </td>
    </tr>
        }
    </table> 
<div>
    <table class="table">
        <tr>
            <th>
                Transportations
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Options
            </th>
        </tr>

        @foreach (var item in Model.Transportations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @Html.ActionLink("Details", "../Transportation/Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "../Transportation/Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table> 
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
