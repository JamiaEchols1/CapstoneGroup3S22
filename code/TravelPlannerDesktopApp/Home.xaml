<Window x:Class="TravelPlannerDesktopApp.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelPlannerDesktopApp"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="userDetailsTextBlock" HorizontalAlignment="Left" Margin="39,35,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="79" Width="174"/>
        <ListView x:Name="tripsListView" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="85,170,105,55">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="createTripButton" Content="Create Trip" HorizontalAlignment="Left" Margin="639,129,0,0" VerticalAlignment="Top"  Click="createTripButton_Click"/>
    </Grid>
</Window>
