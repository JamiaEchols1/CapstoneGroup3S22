<Page x:Class="TravelPlannerDesktopApp.Pages.Trips"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelPlannerDesktopApp.Pages" 
      xmlns:n="clr-namespace:TravelPlannerDesktopApp.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Trips">

    <Grid Background="White" ButtonBase.Click="Grid_Click">
        <n:NavButton Text="Back" ImageSource="/Images/Back.png" NavUri="Pages/Landing.xaml" HorizontalAlignment="Right"/>
        <Label Content="View Trips" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="202"/>
        <ListBox x:Name="tripsListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="70,120,40,40"/>
    </Grid>
</Page>
