<Page x:Class="TravelPlannerDesktopApp.Pages.WaypointInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:n="clr-namespace:TravelPlannerDesktopApp.Controls"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WaypointInfo">

    <Grid Background="White">
        <WrapPanel Margin="5,5,706,0">
            <n:NavButton Text="Add Transportation" ImageSource="/Images/CreateTrip.png"
                         NavUri="Pages/AddTransportationPage.xaml" Width="88" Click="NavButton_Click" />
        </WrapPanel>

        <n:NavButton x:Name="backButton" Text="Back" Click="BackButton_OnClick" ImageSource="/Images/Back.png"
                     NavUri="Pages/TripInfo.xaml" HorizontalAlignment="Right" Margin="0,2,2,0" />

        <TextBlock x:Name="locationTextBlock" HorizontalAlignment="Left" Margin="125,15,0,0" TextWrapping="Wrap"
                   Text="Location:" VerticalAlignment="Top" Height="20" Width="196" />
        <TextBlock x:Name="timeTextBlock" HorizontalAlignment="Left" Margin="124,45,0,0" TextWrapping="Wrap"
                   Text="Start Time:" VerticalAlignment="Top" Height="20" Width="196" />
        <Button x:Name="editWaypointButton" Content="Edit Waypoint" HorizontalAlignment="Left" Margin="299,355,0,0"
                VerticalAlignment="Top" Click="EditWaypointButton_OnClick" />
        <Button x:Name="removeWaypointButton" Content="Remove Waypoint" HorizontalAlignment="Left" Margin="424,355,0,0"
                VerticalAlignment="Top" Click="RemoveWaypointButton_OnClick" />
        <TextBlock x:Name="endDateTextBlock" HorizontalAlignment="Left" Margin="125,79,0,0" TextWrapping="Wrap"
                   Text="End Date: " VerticalAlignment="Top" />
    </Grid>
</Page>