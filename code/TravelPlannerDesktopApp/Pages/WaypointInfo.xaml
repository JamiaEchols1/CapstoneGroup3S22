<Page x:Class="TravelPlannerDesktopApp.Pages.WaypointInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:n="clr-namespace:TravelPlannerDesktopApp.Controls"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WaypointInfo">

    <Grid Background="White" Margin="0,0,0,-110">

        <n:NavButton x:Name="backButton" Text="Back" Click="BackButton_OnClick" ImageSource="/Images/Back.png"
                     NavUri="Pages/TripInfo.xaml" HorizontalAlignment="Right" Margin="0,2,2,0" />

        <TextBlock x:Name="descriptionTextBlock" HorizontalAlignment="Left" Margin="110,65,0,0" TextWrapping="Wrap"
                   Text="Description:" VerticalAlignment="Top" Height="20" Width="196" />

        <TextBlock x:Name="locationTextBlock" HorizontalAlignment="Left" Margin="110,90,0,0" TextWrapping="Wrap"
                   Text="Location:" VerticalAlignment="Top" Height="20" Width="196" />
        <TextBlock x:Name="timeTextBlock" HorizontalAlignment="Left" Margin="110,115,0,0" TextWrapping="Wrap"
                   Text="Start Date:" VerticalAlignment="Top" Height="20" Width="196" />
        <Button x:Name="editWaypointButton" Content="Edit Waypoint" HorizontalAlignment="Left" Margin="182,493,0,0"
                Click="EditWaypointButton_OnClick" Height="17" VerticalAlignment="Top" />
        <Button x:Name="removeWaypointButton" Content="Remove Waypoint" HorizontalAlignment="Left" Margin="530,495,0,0"
                VerticalAlignment="Top" Click="RemoveWaypointButton_OnClick" />
        <TextBlock x:Name="endDateTextBlock" HorizontalAlignment="Left" Margin="110,145,0,0" TextWrapping="Wrap"
                   Text="End Date:" VerticalAlignment="Top" Height="20" Width="196" />
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Waypoint Info"
                   VerticalAlignment="Top" />
        <Viewbox HorizontalAlignment="Left" Height="300" Margin="100,175,0,0" VerticalAlignment="Top" Width="607">
            <WebBrowser x:Name="wbMaps" Source="https://www.google.com/maps" HorizontalAlignment="Left" Height="22188"
                        VerticalAlignment="Top" Width="44519" Margin="364,58,0,0" RenderTransformOrigin="0.5,0.5">
                <WebBrowser.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1" />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </WebBrowser.RenderTransform>
            </WebBrowser>
        </Viewbox>
    </Grid>
</Page>