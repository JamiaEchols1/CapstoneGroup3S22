<Page x:Class="TravelPlannerDesktopApp.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:n1="clr-namespace:TravelPlannerDesktopApp.Controls"
      mc:Ignorable="d"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Title="checkLoginCredentials">

    <Grid Background="White" ButtonBase.Click="Grid_Click">
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Left" Height="23" Margin="305,190,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <TextBlock HorizontalAlignment="Left" Margin="215,194,0,0" TextWrapping="Wrap" Text="Username"
                   VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left" Margin="220,235,0,0" TextWrapping="Wrap" Text="Password"
                   VerticalAlignment="Top" />
        <PasswordBox x:Name="passwordTextBox" HorizontalAlignment="Left" Margin="305,232,0,0" VerticalAlignment="Top"
                     Width="120" Height="23" />
        <n1:NavButton Text="Login" ImageSource="/Images/Login.png" NavUri="Pages/Landing.xaml" Margin="284,290,315,10"
                      Click="handleLogin" />
    </Grid>
</Page>