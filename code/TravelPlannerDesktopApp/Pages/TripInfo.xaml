<Page x:Class="TravelPlannerDesktopApp.Pages.TripInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelPlannerDesktopApp.Pages"
      xmlns:n="clr-namespace:TravelPlannerDesktopApp.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Waypoints">

    <Grid Background="White" ButtonBase.Click="Grid_Click">
        <WrapPanel Margin="5,5,706,0">
            <n:NavButton Text="Create Waypoint" ImageSource="/Images/CreateTrip.png" NavUri="Pages/AddWaypoint.xaml" Width="70"  />
        </WrapPanel>

        <n:NavButton Text="Back" ImageSource="/Images/Back.png" NavUri="Pages/Landing.xaml" HorizontalAlignment="Right" Margin="0,2,2,0"/>

        <ListBox x:Name="waypointsListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="70,120,40,200" SelectionChanged="WaypointsListBox_OnSelectionChanged"/>

        <TextBlock x:Name="SelectedTripTextBlock" HorizontalAlignment="Left" Margin="99,10,0,0" TextWrapping="Wrap" Text="Selected Trip:" VerticalAlignment="Top" Height="20" Width="446"/>
        <TextBlock x:Name="TripStartDateTextBlock" HorizontalAlignment="Left" Margin="99,30,0,0" TextWrapping="Wrap" Text="Start Date:" VerticalAlignment="Top" Height="20" Width="408"/>
        <TextBlock x:Name="TripEndDateTextBlock" HorizontalAlignment="Left" Margin="99,50,0,0" TextWrapping="Wrap" Text="End Date:" VerticalAlignment="Top" Height="20" Width="408"/>
        <ListBox x:Name="transportationListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="70,270,40,45" SelectionChanged="transportationListBox_SelectionChanged"/>
    </Grid>
</Page>
